# Example .env for FastAPI + SQLModel BookStore

# Root path used when the app is mounted behind a reverse proxy or load balancer.
# For local development you can leave this as "/" or set to "/api" if you want.
ROOT_PATH=/api

API_TITLE=BookStore API
API_VERSION=1.0.0

# Database URL
# For SQLite (local default):
# DATABASE_URL=sqlite:///./test.db
#
# For MySQL (Docker container example):
# DATABASE_URL=mysql+pymysql://fastapi_user:fastapi_pass@127.0.0.1:3306/fastapi_db
DATABASE_URL=sqlite:///./test.db
